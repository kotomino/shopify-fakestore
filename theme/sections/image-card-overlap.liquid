{% schema %}
  {
    "name": "Image Card Overlap",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}


<section class="image-card-overlap">
  <div class="content">
    <div class="white-box">
      <div class="gray-border-box">
        <h3>{{ section.settings.heading }}</h3>
        <p>{{ section.settings.content }}</p>
        <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
      </div>
    </div>
  </div>
  <div class="background-image" style="background-image: url('{{ section.settings.background_image | image_url }}');"></div>
</section>